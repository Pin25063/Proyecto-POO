<!-- Importación de componentes a utilizar para la vista -->
<?xml version="1.0" encoding="UTF-8"?>

<!-- Se le indica al lector de FXML de qué clases de Java provienen los componentes a usar -->
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox aligment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ControladorAdministradores">

    <Label text="Asignar Tutoría">

        <font>
            <Font name="System Bold" size="24.0" />
        </font>

    </Label>

    <ComboBox fx:id="estudianteComboBox" promptText="Seleccionar Estudiante" />

    <ComboBox fx:id="tutorComboBox" promptText="Seleccionar Tutor" />

    <ComboBox fx:id="cursoComboBox" promptText="Seleccionar Curso" />

    <Button fx:id="asignarButton" onAction="#handleAsignarTutoria" text="Asignar Tutoría" />

    <Label fx:id="statusLabel" text="" />

</VBox>